{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-download-read",
    "fs:allow-download-write",
    "fs:allow-download-write-recursive",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    "fs:allow-appdata-write-recursive",
    "opener:default",
    "opener:allow-open-url",
    "os:default",
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$HOME/Download/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" },
        { "path": "$DATA/**" },
        { "path": "$PICTURE/**" },
        { "path": "$VIDEO/**" }
      ]
    }
  ]
}